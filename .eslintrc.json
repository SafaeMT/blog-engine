{
    "env": {
        "es2021": true,
        "browser": true,
        "node": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:import/recommended",
        "plugin:jest/recommended",
        "plugin:jsx-a11y/recommended",
        "plugin:react/recommended",
        "plugin:react-hooks/recommended",
        "prettier"
    ],
    "parserOptions": {
      "ecmaFeatures": {
        "jsx": true
      },
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "rules": {
      "no-console": "warn"
    },
    "settings": {
      "react": {
        "version": "detect"
      }
    }
}
