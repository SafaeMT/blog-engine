{
    "env": {
        "es2021": true,
        "browser": true,
        "node": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:import/recommended",
        "plugin:jsx-a11y/recommended",
        "plugin:react/recommended",
        "plugin:react-hooks/recommended",
        "prettier"
    ],
    // To prevent ESLint rules related to Jest from being applied to Cypress test files
    "overrides": [
      {
        "files": ["client/src/**/*.test.js"],
        "extends": "plugin:jest/recommended"
      },
      {
        "files": ["cypress/**/*.test.js"],
        "extends": "plugin:cypress/recommended"
      }
    ],
    "parserOptions": {
      "ecmaFeatures": {
        "jsx": true
      },
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "rules": {
      "no-console": "warn"
    },
    "settings": {
      "react": {
        "version": "detect"
      }
    }
}
